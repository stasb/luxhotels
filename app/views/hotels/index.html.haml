.container-fluid.home
  .row-fluid.panel-row
    .span3.date-picker
      .date-picker-content
        %p
          Search the Finest Hotels
    .span9.hotel-leader
      %a{href: hotel_path(@leader.id)}
        - b_url = @leader['HotelImages']['HotelImage'][3]['url']
        - z_url = b_url.sub('_b', '_z')
        = image_tag z_url, alt: @leader['HotelSummary']['name']
        .info
          %p
            = @leader['HotelSummary']['name'].sub(/,(.*)/, '')
            = @leader.city.name
          = image_tag 'right-arrow.png', alt: 'right arrow'
          .details
            %p
              from
              %b
                = "#{'$' + number_with_precision(@leader.HotelSummary['lowRate'], :precision => 0)}"
              per night
  .row-fluid.panel-row
    .span8.welcome
      = image_tag 'travel-circle.png', alt: 'luxhotels travel'
      .text
        %p
          %span Welcome to Luxhotels
        Luxhotels provides a way to find the highest quality, most luxurious hotels around the world. Browse through a range of premium hotels,
        and book your stay through the website's easy to use interface.
    .span4.newsletter
      %h2
        Sign up for our Newsletter
      %p
        Receive news, offers, and travel ideas across a range of global destinations.
      = form_tag newsletter_subscribe_path, method: :post, class: 'navbar-form' do
        = text_field_tag :email, nil, placeholder: 'email@example.com'
        = submit_tag 'Sign Up', name: nil, class: 'btn'
  .row-fluid.panel-row
    .home-heading
      %p
        Popular Hotels in
        %b
          Asia
  .row-fluid.panel-row
    .span8
      = render partial: 'shared/large_panel', locals: { hotel: @a_hotels[0] }
    .span4
      - @a_hotels[1..2].each do |hotel|
        .row-fluid.panel-row
          .span12
            = render partial: 'shared/small_panel', locals: { hotel: hotel }
  .row-fluid.panel-row
    - @a_hotels[3..5].each do |hotel|
      .span4
        = render partial: 'shared/small_panel', locals: { hotel: hotel }

  .row-fluid.panel-row
    .home-heading
      %p
        Popular Hotels in
        %b
          North America
  .row-fluid.panel-row
    .span4
      - @na_hotels[1..2].each do |hotel|
        .row-fluid.panel-row
          .span12
            = render partial: 'shared/small_panel', locals: { hotel: hotel }
    .span8
      = render partial: 'shared/large_panel', locals: { hotel: @na_hotels[0] }
  .row-fluid.panel-row
    - @na_hotels[3..5].each do |hotel|
      .span4
        = render partial: 'shared/small_panel', locals: { hotel: hotel }

  .row-fluid.panel-row
    .home-heading
      %p
        Popular Hotels in
        %span
          Europe
  .row-fluid.panel-row
    .span8
      = render partial: 'shared/large_panel', locals: { hotel: @eu_hotels[0] }
    .span4
      - @eu_hotels[1..2].each do |hotel|
        .row-fluid.panel-row
          .span12
            = render partial: 'shared/small_panel', locals: { hotel: hotel }
  .row-fluid.panel-row
    - @eu_hotels[3..5].each do |hotel|
      .span4
        = render partial: 'shared/small_panel', locals: { hotel: hotel }

