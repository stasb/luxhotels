%header
  %nav.navbar.navbar-default.navbar-static-top
    .container-fluid
      .navbar-header
        = link_to 'Luxhotels', root_path, class: 'navbar-brand'
      .collapse.navbar-collapse.navbar-ex1-collapse
        %ul.nav.navbar-nav
          - if user_signed_in?
            %li
              = link_to 'Sign out', destroy_user_session_path, method: :delete
            - if current_user['admin']
              %li
                = link_to 'Mining System', admin_path
        = form_tag search_path, method: :get, class: 'navbar-form navbar-left' do
          .form-group
            - if params[:search]
              = text_field_tag :search, nil, placeholder: params[:search], class: 'form-control'
            - else
              = text_field_tag :search, nil, class: 'form-control'
          = submit_tag 'Search', name: nil, class: 'btn btn-default'
