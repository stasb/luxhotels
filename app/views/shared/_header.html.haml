%header
  %nav.navbar.navbar-static-top
    .container-fluid
      %a{href: root_path, class: 'brand'}
        = image_tag 'logo.png'
      .nav-collapse.collapse
        - if user_signed_in?
          %ul.nav
            %li
              = link_to 'Sign out', destroy_user_session_path, method: :delete
            - if current_user['admin']
              %li
                = link_to 'Mining System', admin_path
        = form_tag search_path, method: :get, class: 'navbar-form pull-right search-bar' do
          - if params[:search]
            = text_field_tag :search, nil, placeholder: params[:search], class: 'span4'
          - else
            = text_field_tag :search, nil, placeholder: 'Search for a Hotel', class: 'span4'
          = submit_tag 'Search', name: nil, class: 'btn'
