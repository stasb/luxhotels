.container-fluid
  .row-fluid
    .span12
      %ul.breadcrumb
        %li
          = link_to 'Home', root_path
          %span.divider
            \/
        %li
          = link_to 'Countries', countries_path
          %span.divider
            \/
        %li.active
          = @country.name
  .row-fluid
    .span12.location
      .row-fluid.heading
        .span12
          %h1 Hotels in #{@country.name}
      .row-fluid.areas
        .span12
          %h3 Cities
          - if @active_cities
            %ul
              - @active_cities.each do |city|
                %li
                  = link_to city.name, city_path(city)
          - else
            %p
              Sorry, no cities could be found.

