!!!
%html
  %head
    %title Luxhotels | Admin
    = stylesheet_link_tag    'application', :media => "all"
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Noto+Serif:400,700,400italic,700italic'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Quicksand:300,400,700'
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css'
    = csrf_meta_tags
  %body
    .content
      - if flash[:notice]
        .container-fluid.flash
          .row-fluid
            .span12
              .alert.alert-success= flash[:notice]
      - if flash[:error]
        .container-fluid.flash
          .row-fluid
            .span12
              .alert.alert-info= flash[:error]
      = yield
    = javascript_include_tag 'application'
