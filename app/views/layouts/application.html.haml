%html
  %head
    %title Luxhotels
    = stylesheet_link_tag    'application', :media => "all"
    = stylesheet_link_tag    'galleria.classic', :media => "all"
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Noto+Serif:400,700,400italic,700italic'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Quicksand:300,400,700'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Quicksand:300,400,700'
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css'
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css'
    = csrf_meta_tags
    = yield :head

  %body
    = render partial: 'shared/header'
    .content
      - if flash[:notice]
        .container-fluid.flash
          .row-fluid
            .span12
              .alert.alert-success= flash[:notice]
      - if flash[:error]
        .container-fluid.flash
          .row-fluid
            .span12
              .alert.alert-info= flash[:error]
      = yield
    = render partial: 'shared/footer'

    = javascript_include_tag '//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js'
    = javascript_include_tag "application"
    = javascript_include_tag "gelleria-1.2.9"
    = javascript_include_tag "galleria.classic"
