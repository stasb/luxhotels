.container-fluid
  .row-fluid
    .span3.side-bar
    .span9.main-content
      .row-fluid
        .span12
          %h3
            - if @query.empty?
              Showing all hotels
            - else
              Search results for
              %b #{@query}
      = render partial: 'shared/pagination', locals: { results: @results } unless @results == nil
      .row-fluid
        .span12
          - if @results != nil
            - @results.each do |hotel|
              = render partial: 'hotels/hotel', locals: { hotel: hotel }
          - else
            %p
              No hotels could be found.
      = render partial: 'shared/pagination', locals: { results: @results } unless @results == nil
